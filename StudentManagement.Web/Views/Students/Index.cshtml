@model IEnumerable<StudentManagement.Dtos.StudentDtos.StudentResponseDto>

<div class="container p-3"> 
    <div class="row pt-4">
        <div class="col-6">
         
            <h2 class="text-primary">Students List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Students" asp-action="Create" class="btn btn-primary" style="color: white">
                <i class="fas fa-plus"></i>Add New Student
            </a>
        </div>
    </div>

    <br /><br />
    <div class="col-12">
    @if (Model.Any())
    {
      
        <table class="table table-bordered table-table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>  
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td width="20%" >@student.FullName </td>
                        <td width="30%">@student.Email</td>
                   
                        <td>
                            <div>
                                <a asp-controller="Students" asp-action="Edit" asp-route-Id="@student.Id" class="btn btn-primary mx-2">Edit</a>
                                <a asp-controller="Students" asp-action="Delete" asp-route-Id="@student.Id" class="btn btn-danger mx-2">Del</a>
                                  <a asp-controller="Students" asp-action="Details" asp-route-Id="@student.Id" class="btn btn-success">Details</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No student exists.</p>

    }
</div>
</div>
